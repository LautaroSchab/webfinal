@model Articulo

@{
    Layout = "_Layout";
}

<div class="container text-center">
    <!-- Nombre del artículo -->
    <h2 class="article-title">@Model.Nombre</h2>

    <!-- Imagen del artículo -->
    @if (!string.IsNullOrEmpty(Model.Imagen))
    {
        <img src="@Model.Imagen" class="img-fluid mb-4 article-image" alt="@Model.Nombre" />
    }
    else
    {
        <img src="https://via.placeholder.com/500x500" class="img-fluid mb-4 article-image" alt="Imagen no disponible" />
    }

    <!-- Información del artículo -->
    <div class="article-details mx-auto">
        <p><strong>Categoría:</strong> @Model.Categoria?.Nombre</p>
        <p><strong>Precio:</strong> @Model.precio.Value.ToString("C")</p>
        <p><strong>Cantidad disponible:</strong> @Model.cantidad</p>

        <div class="d-flex justify-content-between align-items-center mt-3">
            @if (Model.habilitado == 1)
            {
                <span class="badge bg-success">Disponible</span>
            }
            else
            {
                <span class="badge bg-danger">No disponible</span>
            }

            <a asp-action="AgregarAlCarro" asp-route-idArticulo="@Model.Id" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Agregar al Carrito
            </a>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .container {
        margin-top: 50px;
    }

    .article-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .article-image {
        max-width: 60%; /* Aumenta el tamaño de la imagen */
        height: auto;
        border: 2px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .article-details {
        background-color: #f9f9f9;
        padding: 15px; /* Reduce el padding */
        width: 50%; /* Reduce el ancho */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .badge {
        font-size: 16px;
    }

    .btn-primary {
        font-size: 16px;
        background-color: #6200EE;
        border-color: #6200EE;
    }

        .btn-primary:hover {
            background-color: #4b00b0;
            border-color: #4b00b0;
        }
</style>
